# Include documentation at root level
include README.md
include LICENSE
include CONTRIBUTING.md
include pyproject.toml

# Include app package data
recursive-include micboard/static *.js *.css *.scss *.map
recursive-include micboard/templates *.html
recursive-include micboard/management *.py
recursive-include micboard/migrations *.py

# Exclude development, test, and cache files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude example_project *
recursive-exclude scripts *
exclude .gitignore .pre-commit-config.yaml pytest.ini mkdocs.yml
exclude *.sh *.py
exclude SECURITY.md ARCHITECTURE_*.md *_SUMMARY.md *_TRACKING.md
