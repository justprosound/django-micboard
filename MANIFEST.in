# Include documentation at root level
include README.md
include LICENSE
include CONTRIBUTING.md
include SECURITY.md
include pyproject.toml

# Include package data (now in micboard/ subdirectory)
recursive-include micboard/static *
recursive-exclude micboard/static/micboard/splash *
recursive-include micboard/templates *
recursive-include micboard/management *.py
recursive-include micboard/migrations *.py

# Exclude development and cache files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude tests *
recursive-exclude docs *
exclude .gitignore
exclude test_package.sh
exclude micboard_restructure.sh
