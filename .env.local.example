# Django-Micboard: Shure System API Configuration
#
# SECURITY: This is an EXAMPLE template. Create .env.local with your actual credentials.
# IMPORTANT: Never commit .env.local to git. It's in .gitignore for this reason.
#
# Copy this file to .env.local and fill in actual values:
#   cp .env.local.example .env.local
#

# Django Settings
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-never-use-in-production

# Shure System API Configuration
# Base URL of your Shure System API (default: localhost:10000)
MICBOARD_SHURE_API_BASE_URL=https://localhost:10000

# Shared key for API authentication
# Get from: C:\ProgramData\Shure\SystemAPI\Standalone\Security\sharedkey.txt
MICBOARD_SHURE_API_SHARED_KEY=your-shared-key-here

# SSL Certificate Verification
# Set to 'false' for self-signed certificates (development only)
# Set to 'true' for production with valid certificates
MICBOARD_SHURE_API_VERIFY_SSL=false

# API Timeout (seconds)
MICBOARD_SHURE_API_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
