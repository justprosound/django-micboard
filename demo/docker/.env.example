# Demo environment configuration for django-micboard
# Copy this file to .env and modify with your actual values

# =============================================================================
# Shure System API Configuration
# =============================================================================

# API Base URL
# - Windows Docker Desktop: http://host.docker.internal:10000
# - Linux/macOS Docker: http://host.docker.internal:10000 or http://172.17.0.1:10000
# - Georgia Tech VPN: http://172.21.x.x:10000 (replace with actual device IP)
MICBOARD_SHURE_API_BASE_URL=http://host.docker.internal:10000

# Required: Shure API Shared Secret
# Location on Windows: C:\ProgramData\Shure\SystemAPI\Standalone\Security\sharedkey.txt
# This file is generated automatically by Shure System API
MICBOARD_SHURE_API_SHARED_KEY=your-shared-secret-here

# SSL Certificate Verification
# Set to 'false' only if using self-signed certificates (⚠️ reduces security)
MICBOARD_SHURE_API_VERIFY_SSL=true

# =============================================================================
# Device Discovery Configuration
# =============================================================================

# Comma-separated list of device IPs for discovery
# Example for Georgia Tech: 172.21.1.100,172.21.1.101,172.21.1.102
# Leave empty to discover all devices on network
MICBOARD_DISCOVERY_IPS=

# Network timeout for device connections (seconds)
MICBOARD_NETWORK_TIMEOUT=30

# Polling interval for device updates (seconds)
MICBOARD_POLLING_INTERVAL=60

# =============================================================================
# Django Configuration
# =============================================================================

# Django secret key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DJANGO_SECRET_KEY=your-secret-key-here

# Django settings module
DJANGO_SETTINGS_MODULE=demo.settings

# Debug mode (⚠️ NEVER enable in production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# By default, uses SQLite. For PostgreSQL, uncomment and configure:
# DATABASE_URL=postgresql://user:password@postgres:5432/micboard

# =============================================================================
# Cache Configuration (Optional)
# =============================================================================

# Redis cache (if using with-redis profile)
# REDIS_URL=redis://redis:6379/0

# =============================================================================
# Georgia Tech Specific Configuration
# =============================================================================

# If testing with GT devices on VPN, uncomment and configure:
# MICBOARD_SHURE_API_BASE_URL=http://172.21.x.x:10000
# MICBOARD_DISCOVERY_IPS=172.21.1.100,172.21.1.101,172.21.1.102
# Add your actual device IPs discovered on GT network

# Network GUID for Shure discovery (if known)
# MICBOARD_SHURE_NETWORK_GUID={A283C67D-499A-4B7E-B628-F74E8061FCE2}

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MICBOARD_LOG_LEVEL=INFO

# Log to file
MICBOARD_LOG_TO_FILE=false
MICBOARD_LOG_FILE_PATH=/var/log/micboard/micboard.log
