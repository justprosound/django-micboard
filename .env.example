# ============================================================================
# django-micboard Configuration Template
# ============================================================================
# Copy this file to .env and customize for your environment.
# This is a DEVELOPMENT/EXAMPLE configuration. For production, use secure
# storage for secrets (environment variables, vault, etc.).
#
# DO NOT commit .env files to version control.
# ============================================================================

# ============================================================================
# DJANGO CORE SETTINGS (Example Project Only)
# ============================================================================

# SECURITY WARNING: Set a strong secret key in production!
DJANGO_SECRET_KEY=django-insecure-change-me-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database: SQLite for development, PostgreSQL/MySQL in production
# DJANGO_DATABASE_URL=postgresql://user:password@localhost:5432/micboard
# or
# DJANGO_DATABASE_URL=mysql://user:password@localhost:3306/micboard

# ============================================================================
# MICBOARD CORE CONFIGURATION
# ============================================================================

# Shure System API (wireless microphone base station)
MICBOARD_SHURE_API_BASE_URL=https://localhost:10000
MICBOARD_SHURE_API_SHARED_KEY=your-shared-key
MICBOARD_SHURE_API_VERIFY_SSL=False
MICBOARD_SHURE_API_TIMEOUT=10
MICBOARD_SHURE_API_MAX_RETRIES=3

# Device polling interval (seconds)
MICBOARD_POLL_INTERVAL=5

# Cache timeout (seconds)
MICBOARD_CACHE_TIMEOUT=30

# ============================================================================
# MULTI-TENANCY & MSP CONFIGURATION
# ============================================================================

# Enable multi-site mode (requires django.contrib.sites)
MICBOARD_MULTI_SITE_MODE=False

# Enable MSP (Managed Service Provider) mode
# Adds Organization and Campus models for multi-tenant isolation
MICBOARD_MSP_ENABLED=False

# Site isolation strategy:
#   'none' - No isolation (single-site, monitoring groups only)
#   'site' - Filter by Django Site
#   'organization' - Filter by Organization (requires MSP_ENABLED)
#   'campus' - Filter by Campus (requires MSP_ENABLED)
MICBOARD_SITE_ISOLATION=none

# Allow superusers to view all organizations
MICBOARD_ALLOW_CROSS_ORG_VIEW=True

# Allow users to switch between organizations
MICBOARD_ALLOW_ORG_SWITCHING=True

# Subdomain-based organization routing
MICBOARD_SUBDOMAIN_ROUTING=False
MICBOARD_ROOT_DOMAIN=micboard.example.com

# ============================================================================
# ADMIN & UI CONFIGURATION
# ============================================================================

# Show organization selector in admin navbar (MSP mode)
MICBOARD_ADMIN_ORG_SELECTOR=True

# ============================================================================
# DEVICE LIMITS
# ============================================================================

# Global device limit (across all organizations)
# Leave empty or set to null for unlimited
MICBOARD_GLOBAL_DEVICE_LIMIT=

# Warn when organization reaches X% of device limit (0.0-1.0)
MICBOARD_DEVICE_LIMIT_WARNING_THRESHOLD=0.9

# ============================================================================
# AUDIT & RETENTION
# ============================================================================

# Days to retain activity logs
MICBOARD_ACTIVITY_LOG_RETENTION_DAYS=90

# Days to retain service sync logs
MICBOARD_SERVICE_SYNC_LOG_RETENTION_DAYS=30

# Days to retain API health logs
MICBOARD_API_HEALTH_LOG_RETENTION_DAYS=7

# Path for audit archive storage
MICBOARD_AUDIT_ARCHIVE_PATH=audit_archives

